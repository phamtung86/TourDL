<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
    <title>Dashboard</title>
    <meta content="" name="description" />
    <meta content="" name="keywords" />
    <!-- Favicons -->
    <link href="assets/img/favicon.png" rel="icon" />
    <link href="assets/img/apple-touch-icon.png" rel="apple-touch-icon" />
    <!-- Google Fonts -->
    <link href="https://fonts.gstatic.com" rel="preconnect" />
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
      rel="stylesheet" />
    <!-- Vendor CSS Files -->
    <link href="assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" />
    <link href="assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link href="assets/vendor/quill/quill.snow.css" rel="stylesheet" />
    <link href="assets/vendor/quill/quill.bubble.css" rel="stylesheet" />
    <link href="assets/vendor/remixicon/remixicon.css" rel="stylesheet" />
    <link href="assets/vendor/simple-datatables/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="assets/css/style.css" />
</head>

<body>
  <div class="nav-bar-content">
    <!-- Start menubar -->
    <%- include('./menuBar') %>
      <!-- Main -->
      <main id="main" class="main">
        <div class="pagetitle">
          <h1>Dashboard</h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="index.html">Home</a></li>
              <li class="breadcrumb-item active">Dashboard</li>
            </ol>
          </nav>
        </div>
        <!-- End Page Title -->

        <section class="section dashboard">
          <div class="row">
            <!-- Left side columns -->
            <div class="col-lg-8">
              <div class="row">
                <!-- Sales Card -->
                <div class="col-xxl-4 col-md-6">
                  <div class="card info-card sales-card">
                    <div class="filter">
                      <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                      <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                          <h6>Lọc theo</h6>
                        </li>
                        <li>
                          <a class="dropdown-item" href="#" data-value="DAY" onclick="getTotalTourByType('DAY')">Hôm
                            nay</a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="#" data-value="MONTH"
                            onclick="getTotalTourByType('MONTH')">Tháng</a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="#" data-value="YEAR"
                            onclick="getTotalTourByType('YEAR')">Năm</a>
                        </li>
                      </ul>
                    </div>

                    <div class="card-body">
                      <h5 class="card-title">
                        Tour Đặt
                        <span id="cart-title-total-tour-order">| Tháng</span>
                      </h5>
                      <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                          <i class="bi bi-cart"></i>
                        </div>
                        <div class="ps-3">
                          <h6 id="total-tour-order">
                            <%= data.totalTourOrder %>
                          </h6>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- End Sales Card -->

                <div class="col-xxl-4 col-md-6">
                  <div class="card info-card revenue-card">
                    <div class="filter">
                      <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                      <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                          <h6>Lọc theo</h6>
                        </li>
                        <li>
                          <a class="dropdown-item" href="#" data-value="DAY" onclick="getRevenueFromDropdown('DAY')">Hôm
                            nay</a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="#" data-value="MONTH"
                            onclick="getRevenueFromDropdown('MONTH')">Tháng</a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="#" data-value="YEAR"
                            onclick="getRevenueFromDropdown('YEAR')">Năm</a>
                        </li>
                      </ul>
                    </div>

                    <div class="card-body">
                      <h5 class="card-title">
                        Doanh thu <span id="card-title-status">| Tháng</span>
                      </h5>

                      <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                          <i class="bi bi-currency-dollar"></i>
                        </div>
                        <div class="ps-3">
                          <h6 id="revenue">
                            <%= data.revenue.toLocaleString('en-US', { maximumFractionDigits: 3 }) %>
                          </h6>
                          <!-- <span class="text-success small pt-1 fw-bold">8%</span> <span
                                                class="text-muted small pt-2 ps-1">increase</span> -->
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- End Revenue Card -->

                <!-- Customers Card -->
                <div class="col-xxl-4 col-xl-12">
                  <div class="card info-card customers-card">
                    <div class="card-body">
                      <h5 class="card-title">Người Dùng</h5>

                      <div class="d-flex align-items-center">
                        <div class="card-icon rounded-circle d-flex align-items-center justify-content-center">
                          <i class="bi bi-people"></i>
                        </div>
                        <div class="ps-3">
                          <h6>
                            <%= data.totalAccountCustomer %>
                          </h6>
                          <!-- <span class="text-danger small pt-1 fw-bold">12%</span>
                          <span class="text-muted small pt-2 ps-1">decrease</span> -->
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- End Customers Card -->

                <div class="col-12">
                  <div class="card recent-sales overflow-auto">
                    <div class="card-body">
                      <h5 class="card-title">Thống kê số lượng tour được đặt theo tháng</span></h5>
                      <table class="table table-borderless datatable">
                        <div>
                          <canvas id="myChart"></canvas>
                        </div>
                      </table>
                    </div>
                  </div>
                </div><!-- End Recent Sales -->
                <div class="col-12">
                  <div class="card recent-sales overflow-auto">
                    <div class="filter">
                      <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                      <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                          <h6>Lọc theo</h6>
                        </li>
                        <li><a class="dropdown-item" href="javascript:void(0)"
                            onclick="changeChartArtRevenue('DAY')">Ngày</a></li>
                        <li><a class="dropdown-item" href="javascript:void(0)"
                            onclick="changeChartArtRevenue('MONTH')">Tháng</a></li>
                        <li><a class="dropdown-item" href="javascript:void(0)">Năm</a></li>
                      </ul>
                    </div>

                    <div class="card-body">
                      <h5 class="card-title">Biểu đồ thống kê doanh thu <span id="card-stats-revenue-title">|
                          Tháng</span> </h5>
                      <table class="table table-borderless datatable">
                        <div>
                          <canvas id="revenueLineChart"></canvas>
                        </div>
                      </table>
                    </div>
                  </div>
                </div><!-- End Recent Sales -->
                <div class="col-12">
                  <div class="card recent-sales overflow-auto">
                    <div class="card-body">
                      <h5 class="card-title">Biểu đồ phân tích</h5>
                      <table class="table table-borderless datatable">
                        <div class="chart-customer-tour__container">
                          <div class="chart-customer-tour__item">
                            <canvas id="myPieChart"></canvas>
                            <h6 class="chart-art-top-tour">Tỉ lệ tour yêu thích 6 tháng gần nhất</h6>
                          </div>
                          <div class="chart-customer-tour__item">
                            <canvas id="myPieChartTour"></canvas>
                            <h6 class="chart-art-top-tour">Tỉ lệ tour hiện có</h6>
                          </div>
                        </div>
                      </table>
                    </div>
                  </div>
                </div><!-- End Recent Sales -->

                <div class="col-12">
                  <div class="card recent-sales overflow-auto">
                    <div class="card-body">
                      <h5 class="card-title">Thống kê lượng sử dụng phương tiện</h5>
                      <table class="table table-borderless datatable">
                        <div>
                          <canvas id="transportChart"></canvas>
                        </div>
                      </table>
                    </div>
                  </div>
                </div>
                <!-- Top Selling -->
                <div class="col-12">
                  <div class="card top-selling overflow-auto">
                    <div class="filter">
                      <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                      <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                          <h6>Lọc theo</h6>
                        </li>

                        <li>
                          <a class="dropdown-item" href="#" data-value="DAY" onclick="getTopTourByType('DAY')">Hôm
                            nay</a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="#" data-value="MONTH"
                            onclick="getTopTourByType('MONTH')">Tháng</a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="#" data-value="YEAR" onclick="getTopTourByType('YEAR')">Năm</a>
                        </li>
                      </ul>
                    </div>

                    <div class="card-body pb-0">
                      <h5 class="card-title">
                        Top Tour <span id="card-top-tour-title">| Tháng</span>
                      </h5>

                      <table class="table table-borderless">
                        <thead>
                          <tr>
                            <th class="list-tour-title" scope="col">Mã tour</th>
                            <th class="list-tour-title" scope="col">
                              Hình ảnh
                            </th>
                            <th class="list-tour-title" scope="col">
                              Tên tour
                            </th>
                            <th class="list-tour-title" scope="col">
                              Số lượng đặt
                            </th>
                            <th class="list-tour-title" scope="col">
                              Tổng số tiền
                            </th>
                          </tr>
                        </thead>
                        <tbody id="list-top-tour">
                          <% data.topTour.forEach(function(tour){ %>
                            <tr>
                              <td class="list-tour-data">
                                <%= tour.tour.id %>
                              </td>
                              <td class="list-tour-data">
                                <img src="<%= tour.tour.imageLink %>" alt="" />
                              </td>
                              <td class="list-tour-data">
                                <%= tour.tour.name %>
                              </td>
                              <td class="list-tour-data">
                                <%= tour.quantity %>
                              </td>
                              <td class="list-tour-data">
                                <%= Number(tour.totalPrice).toLocaleString('en-US', { maximumFractionDigits: 3 }) %> ₫
                              </td>
                            </tr>
                            <% }); %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
                <!-- End Top Selling -->

                <!-- Customer -->
                <div class="col-12">
                  <div class="card top-selling overflow-auto">
                    <div class="filter">
                      <a class="icon" href="#" data-bs-toggle="dropdown"><i class="bi bi-three-dots"></i></a>
                      <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow">
                        <li class="dropdown-header text-start">
                          <h6>Theo tháng</h6>
                        </li>

                        <li>
                          <a class="dropdown-item customer__link-option" style="cursor: pointer;" data-value="3">3
                            tháng</a>
                        </li>
                        <li>
                          <a class="dropdown-item customer__link-option" style="cursor: pointer;" data-value="6">6
                            tháng</a>
                        </li>
                      </ul>
                    </div>

                    <div class="card-body pb-0">
                      <h5 class="card-title">
                        Khách hàng tiềm năng <span id="card-top-tour-title " class="customer__option">| 3 Tháng</span>
                      </h5>

                      <table class="table table-borderless">
                        <thead>
                          <tr>
                            <th class="list-tour-title" scope="col">STT</th>
                            <th class="list-tour-title" scope="col">
                              Tên khách hàng
                            </th>
                            <th class="list-tour-title" scope="col">
                              Số điện thoại
                            </th>
                            <th class="list-tour-title" scope="col">
                              Email
                            </th>
                            <th class="list-tour-title" scope="col">
                              Số tour đã đi
                            </th>
                          </tr>
                        </thead>
                        <tbody id="list-top-tour " class="list__customer">
                          <% data.topCustomer.forEach(function(customer, index){ %>
                            <tr>
                              <td class="list-tour-data" data-userId="<%= customer.userID%>">
                                <%= index+1 %>
                              </td>
                              <td class="list-tour-data">
                                <%= customer.user.name %>
                              </td>
                              <td class="list-tour-data">
                                <%= customer.user.phoneNumber %>
                              </td>
                              <td class="list-tour-data">
                                <%= customer.user.email %>
                              </td>
                              <td class="list-tour-data" style="color: black;">
                                <%= customer.countTrip%>
                              </td>
                            </tr>
                            <% }); %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
                <!-- End Customer -->
              </div>
            </div>
            <!-- End Left side columns -->
          </div>
        </section>
      </main>
      <!-- ------------------------------ -->
      <!-- Javascript -->
      <%- include('../partials/baseScript')%>
        <!-- Vendor JS Files -->
        <script src="assets/vendor/apexcharts/apexcharts.min.js"></script>
        <script src="assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
        <script src="assets/vendor/chart.js/chart.umd.js"></script>
        <script src="assets/vendor/echarts/echarts.min.js"></script>
        <script src="assets/vendor/quill/quill.js"></script>
        <script src="assets/vendor/simple-datatables/simple-datatables.js"></script>
        <script src="assets/vendor/tinymce/tinymce.min.js"></script>
        <script src="assets/vendor/php-email-form/validate.js"></script>
        <!-- Template Main JS File -->
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </div>
  <!-- --------- -->
  <script src="/js/dashboard.js"></script>
</body>

</html>